<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include('./partials/header.ejs')%>
        <link rel="stylesheet" href="/shop/shop.css"
    </head>
<body>
    <div class="shopContainer">
        <div class="top">
            <%-include('./partials/clientTabs.ejs')  %>
        </div>
        <div class="top1">
            <div class="content">
                <div class="content_1">
                    <div class="search">
                        <input type="text" name="query" placeholder="Search for products">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                    <div class="cart">
                       <a href="">
                        <i class="fa-solid fa-bag-shopping"></i>
                        <p id="cart-count"><%= cartItemCount  %></p>
                       </a>
                    </div>
                </div>
                <div class="content_2">
                    <button onclick="showCategory('feedsDiv')">FEEDS</button>
                    <button onclick="showCategory('drugsDiv')">DRUGS</button>
                    <button onclick="showCategory('seedsDiv')">SEEDS</button>
                    <button onclick="showCategory('machineriesDiv')">MACHINERY</button>
                </div>
            </div>
        </div>
        <div class="body">
               <div class="feedsDiv">
                <% Feeds.forEach((Feed) => {%>
                    <div class="Feed">
                        <img src="data:image/png;base64,<%=Feed.productImage%>" alt="No image">
                        <p><%=Feed.productName %></p>
                        <p>Kshs. <%=Feed.productPrice %></p>
                        <p><button onclick="addToCart('<%= user %>', '<%= Feed.productImage %>', '<%= Feed.productName %>', '<%= Feed.productPrice %>')">ADD TO CART</button></p>
                    </div>
                    <% }) %>
               </div>

               <div class="drugsDiv" style="display: none;">
                <% Drugs.forEach((Drug) => {%>
                    <div class="Drug">
                        <img src="data:image/png;base64,<%=Drug.productImage%>" alt="No image">
                        <p><%=Drug.productName %></p>
                        <p>Kshs. <%=Drug.productPrice %></p>
                        <p><button>ADD TO CART</button></p>
                    </div>
                    <% }) %>
               </div>

               <div class="seedsDiv" style="display: none;">
                <% Seeds.forEach((Seed) => {%>
                    <div class="Seed">
                        <img src="data:image/png;base64,<%=Seed.productImage%>" alt="No image">
                        <p><%=Seed.productName %></p>
                        <p>Kshs. <%=Seed.productPrice %></p>
                        <p><button>ADD TO CART</button></p>
                    </div>
                    <% }) %>
               </div>

               <div class="machineriesDiv" style="display: none;">
                <% Machineries.forEach((Machinery) => {%>
                    <div class="Machinery">
                        <img src="data:image/png;base64,<%=Machinery.productImage%>" alt="No image">
                        <p><%=Machinery.productName %></p>
                        <p>Kshs. <%=Machinery.productPrice %></p>
                        <p><button>ADD TO CART</button></p>
                    </div>
                    <% }) %>
               </div>
        </div>
    </div>
    <script src="/commonJavascript.js"></script>
    <script src="/shop/shopJavascript.js"></script>
</body>
</html>